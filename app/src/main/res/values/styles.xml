<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeTwo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="h1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans_light</item>
        <item name="android:textSize">@dimen/size_h1</item>
    </style>

    <style name="h2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_h2</item>
    </style>

    <style name="h3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">@dimen/size_h3</item>
    </style>

    <style name="h4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_h4</item>
    </style>

    <style name="h5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_h5</item>
    </style>

    <style name="h6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_h6</item>
    </style>

    <style name="subtitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">@dimen/size_large</item>
    </style>

    <style name="subtitle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">@dimen/size_xlarge</item>
    </style>

    <style name="body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">@dimen/size_small</item>
    </style>

    <style name="overline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextOne</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_small</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
